{{#if addNewComment}}
<h1>Add Comment</h1>
<div>
  <form>
    <div class="form-group">
      <label for="content">Content</label>
      {{textarea rows="3" class="form-control" value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="author1">Name</label>
      {{input class="form-control" value=author1 id="author1"}}
    </div>
    <button class="btn btn-success" {{action 'saveComment'}}>Save</button>
    <button class="btn btn-warning" {{action 'commentFormHide'}}>Cancel</button>
  </form>
</div>
{{else}}
<button class="btn btn-danger" {{action 'commentFormShow'}}>Add Comment</button>
{{/if}}
