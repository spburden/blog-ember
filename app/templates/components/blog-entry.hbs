<div class="post">
  <h3>{{blog.title}}</h3>
  <div class="img-center">
    <img src={{blog.image}}>
  </div>
  <p>By: {{blog.author}}</p>
  <p>{{blog.body}}</p>
  <p>{{moment-format blog.date}}</p>
  <p>{{moment-from-now blog.date}}</p>
  <button class="btn" {{action 'delete' blog}}>Delete</button>
</div>
<br>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  Edit post
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <h1>Edit Post</h1>
        <div>
          <form>
            <div class="form-group">
              <label for="title">Title</label>
              {{input class="form-control" value=title id="title" placeholder=blog.title}}
            </div>

            <div class="form-group">
              <label for="body">Body</label>
              {{textarea rows="10" class="form-control" value=body id="body" placeholder=blog.body}}
            </div>

            <div class="form-group">
              <label for="author">Author</label>
              {{input class="form-control" value=author id="author" placeholder=blog.author}}
            </div>

            <div class="form-group">
              <label for="image">Image URL</label>
              {{input class="form-control" value=image id="image" placeholder=blog.image}}
            </div>
          </form>
        </div>
        <br>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button class="btn btn-info" data-dismiss="modal" {{action 'update' blog}}>Submit</button>
      </div>
    </div>
  </div>
</div>
<br><br><br>
<div class="panel panel-info">
  <div class="panel-heading">
    <h2> Comments </h2>
    {{new-comment saveComment="saveComment" blog=blog}}
  </div>
  {{#each blog.comments as |comment|}}
  <div class="panel-body">
     <li class="list-group-item">
      <p>{{comment.content}}</p>
      <p>By: {{comment.author1}}</p>
      <p>{{moment-from-now comment.date}}</p>
    </li>
  </div>
  {{/each}}

</div>
